<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment"
    android:background="@color/azul_back">

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/etUser"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:hint="usuario@correo.com"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPass"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ContraseÃ±a"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/etUser"
        app:layout_constraintStart_toStartOf="@id/etUser"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="0dp"
        android:layout_marginHorizontal="80dp"
        android:layout_height="wrap_content"
        android:hint="*******"

        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/cbRemind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordarme"
        app:layout_constraintStart_toStartOf="@id/etPass"
        app:layout_constraintTop_toBottomOf="@id/etPass"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cbRemind"
        android:text="Login"
        />

</androidx.constraintlayout.widget.ConstraintLayout>